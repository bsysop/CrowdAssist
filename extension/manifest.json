{
  "manifest_version": 3,
  "name": "CrowdAssist",
  "version": "1.4.0",
  "description": "An assistant for Bug Bounty Researchers to help with report writing.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "cookies",
    "alarms"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://bugcrowd.com/submissions/*",
        "https://bugcrowd.com/engagements/*/submissions/*"
      ],
      "js": [
        "turndown.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "turndown.js"
      ],
      "matches": [
        "https://bugcrowd.com/*"
      ]
    }
  ],
  "host_permissions": [
    "https://api.ipify.org/",
    "https://api.openai.com/",
    "https://bugcrowd.com/*",
    "https://login.hackers.bugcrowd.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 