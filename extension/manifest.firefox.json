{
  "manifest_version": 2,
  "name": "CrowdAssist",
  "version": "1.4.0",
  "description": "An assistant for Bug Bounty Researchers to help with report writing.",
  "browser_specific_settings": {
    "gecko": {
      "id": "crowdassist@bugbounty.extension",
      "strict_min_version": "91.0"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "alarms",
    "https://api.ipify.org/*",
    "https://api.openai.com/*",
    "https://bugcrowd.com/*",
    "https://login.hackers.bugcrowd.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://bugcrowd.com/submissions/*",
        "https://bugcrowd.com/engagements/*/submissions/*"
      ],
      "js": [
        "turndown.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "turndown.js"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}

